{% extends 'partials/_master.twig' %}

{% block main %}

<section id="main" class="wrapper alt">
    <div class="inner">
        
        <header class="major special">
            {% if record.taxonomy and blog.taxonomy|length %}<p>{% for taxonomy in blog.taxonomy %}{{ not loop.first ? ', ' }}{% for link, name in taxonomy %}<a href="{{ link }}">{{ name|ucfirst }}</a>{{ not loop.last ? ', ' }}{% endfor %}{% endfor %}</p>{% endif %}
            <h1>{{ record.title }}</h1>
        </header>
        
        {% if record.image %}<figure class="image main"><img src="{{ record.image|image(1280, 660) }}" alt="{{ record.values.image.alt|default() }}" /></figure>{% endif %}
        {{ record.text|raw }}
        {% if record.info %}
            <blockquote>
                {{ record.info|replace({'<p>':'', '</p>':'<br />'})|striptags('<a><b><i><br><strong>')|raw }}
            </blockquote>
        {% endif %}
    </div>
</section>

{% endblock main %}
